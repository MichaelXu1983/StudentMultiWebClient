
@charset "UTF-8";
/*postcss-pxtransform rn eject enable*/
body {
  padding: 0;
  margin: 0;
  background-color: #fff; }

.fixed {
  bottom: 0;
  /* 在 H5 模式下 tabBar 可能会挡住页面 fixed 元素问题，所以以下代码将会编译成 margin-bottom: 50px，在小程序模式下则会忽略，来解决此问题*/
  margin-bottom: taro-tabbar-height; }

/*postcss-pxtransform rn eject disable*/
/* 该自定义组件的默认样式 */
/* user-defined
   ========================================================================== */
/**
 * Empty
 */
.global-empty {
  width: 300rpx;
  margin: 120rpx auto;
  /*  #ifndef rn  */
  text-align: center;
  /*  #endif  */ }

.global-empty__pic,
.global-empty__intro {
  width: 300rpx;
  margin: 20rpx auto; }

.global-empty__pic-img {
  width: 300rpx;
  height: 300rpx; }

.global-empty__text {
  font-size: 28rpx;
  color: #777;
  text-align: center; }

/**
 * Button
 */
.am-button-primary,
.am-button-disabled,
.am-button-ghost {
  margin: 60rpx 0 0 0; }

.am-button-primary {
  /*  #ifndef  rn  */
  background-image: -webkit-linear-gradient(225deg, #69409e 0%, #dd84a5 100%);
  background-image: -o-linear-gradient(225deg, #69409e 0%, #dd84a5 100%);
  background-image: linear-gradient(-135deg, #69409e 0%, #dd84a5 100%);
  /*  #endif  */
  background-color: #6b40bd;
  border-color: transparent; }

.am-button-disabled {
  /*  #ifndef  rn  */
  background-image: -webkit-gradient(linear, left top, right top, from(#e0e0e0), to(#afafaf));
  background-image: -webkit-linear-gradient(left, #e0e0e0 0%, #afafaf 100%);
  background-image: -o-linear-gradient(left, #e0e0e0 0%, #afafaf 100%);
  background-image: linear-gradient(90deg, #e0e0e0 0%, #afafaf 100%);
  /*  #endif  */
  background-color: #afafaf;
  border-color: transparent; }

.am-button-ghost {
  border: 2rpx solid #aa66a2;
  border-color: #aa66a2; }

.am-button-primary-text,
.am-button-ghost-text {
  letter-spacing: 4rpx; }

.am-button-primary-text {
  color: #fff; }

.am-button-ghost-text {
  color: #aa66a2; }

.am-buttons {
  margin: 60rpx 5%; }

/**
 * Empty
 */
.article-detail {
  min-height: 100%;
  padding: 40rpx; }

.article-detail__title {
  margin: 20rpx 0;
  font-size: 38rpx;
  font-weight: bold;
  text-align: left; }

.article-detail__subtitle {
  margin-bottom: 20rpx;
  font-size: 30rpx;
  font-weight: bold;
  text-align: left; }

.article-detail__text {
  margin-bottom: 20rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  color: #444;
  text-align: left; }

.article-detail__img {
  width: 100%;
  margin: 20rpx auto; }

.article-detail__img-block {
  max-width: 100%;
  margin: 20rpx auto; }

.article-detail__richtext {
  min-height: 100%;
  text-align: center; }
