<block wx:if="{{$taroCompReady}}">
    <view class="{{styles['index']}}">
        <image src="{{indexBg}}" class="{{styles['index__bg']}}"></image>
        <view class="{{styles['index-header']}}">
            <navigator url="/pages/index/notice_list" class="{{styles['index__Navigator']}}">
                <image src="{{noticeIcon}}" class="{{styles['index__notice']}}"></image>
                <block wx:if="{{hasNewNotice}}">
                    <view class="{{styles['index__notice-status']}}">
                        <view class="{{styles['index__notice-status-border']}}"></view>
                    </view>
                </block>
            </navigator>
            <navigator url="/pages/index/message_list" class="{{styles['index__Navigator']}}">
                <image src="{{messageIcon}}" class="{{styles['index__message']}}"></image>
                <block wx:if="{{hasNewMessage}}">
                    <view class="{{styles['index__message-status']}}">
                        <view class="{{styles['index__message-status-border']}}"></view>
                    </view>
                </block>
            </navigator>
        </view>
        <view class="{{styles['index-card']}}">
            <view class="{{styles['index-card__username']}}"><text class="{{styles['index-card__username-text']}}">亲爱的小朋友</text>
            </view>
            <navigator url="/pages/courses/index" class="{{styles['index__Navigator']}}" open-type="switchTab">
                <view class="{{styles['index-card__button']}}"><text class="{{styles['index-card__button-text']}}">开始学习</text>
                </view>
            </navigator>
            <view class="{{styles['index-card__tips']}}"><text class="{{styles['index-card__tips-text']}}">点击【开始学习】，开始你的编程之旅</text>
            </view>
            <view class="{{styles['index-card__footer']}}">
                <view class="{{styles['index-card__icon']}}">
                    <image src="{{ok}}" class="{{styles['index-card__icon-ok']}}"></image><text class="{{styles['index-card__icon-text']}}">编程</text>
                </view>
                <view class="{{styles['index-card__icon']}}">
                    <image src="{{ok}}" class="{{styles['index-card__icon-ok']}}"></image><text class="{{styles['index-card__icon-text']}}">逻辑</text>
                </view>
                <view class="{{styles['index-card__icon']}}">
                    <image src="{{ok}}" class="{{styles['index-card__icon-ok']}}"></image><text class="{{styles['index-card__icon-text']}}">思维</text>
                </view>
            </view>
        </view>
        <view class="{{styles['index-notice']}}">
            <view class="{{styles['index__maintitle']}}"><text class="{{styles['index__maintitle-text']}}">最新公告</text>
            </view>
            <swiper autoplay="{{true}}" circular="{{true}}" interval="{{3000}}" duration="{{3000}}" class="{{styles['index-notice__swiper']}}">
                <swiper-item wx:key="val" wx:for="{{noticeImg}}" wx:for-item="val" wx:for-index="_anonIdx2">
                    <navigator url="/pages/webview/notice" class="{{styles['index-notice__swiper-Navigator']}}">
                        <image src="{{banner}}" class="{{styles['index-notice__swiper-img']}}"></image>
                    </navigator>
                </swiper-item>
            </swiper>
        </view>
        <view class="{{styles['index-guide']}}">
            <view class="{{styles['index__maintitle']}}"><text class="{{styles['index__maintitle-text']}}">上课指引</text>
            </view>
            <view class="{{styles['index-guide__content']}}">
                <navigator url="/pages/webview/attention" class="{{styles['index__Navigator']}}">
                    <image src="{{guide_bg_left}}" class="{{styles['index-guide__bg-left']}}"></image>
                </navigator>
                <navigator url="/pages/webview/guide" class="{{styles['index__Navigator']}}">
                    <image src="{{guide_bg_right}}" class="{{styles['index-guide__bg-right']}}"></image>
                </navigator>
            </view>
        </view>
    </view>
</block>